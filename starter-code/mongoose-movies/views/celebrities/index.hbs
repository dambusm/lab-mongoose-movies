<h1>Celebrities</h1>

<h2>
  <a href="/celebrities/add">Add a celebrity</a>
</h2>

<ul>
  {{#each this.celebrities}}
  <li>
    <a href="/celebrities/{{_id}}">{{name}}</a>
    <form action="/celebrities/{{_id}}/delete" method='post'>
      <input type='submit' value='Delete'>
    </form>
    <form action="/celebrities/{{_id}}/edit" method='get'>
      <input type='submit' value='Edit'>
    </form>



    {{#ifIn _id ../stars}}
    <a href="../auth/unstar/{{_id}}">Unstar</a>
    {{else}}
    <a href="../auth/star/{{_id}}">Star</a>
    {{/ifIn}}
  </li>
  {{/each}}
</ul>